<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <ToolCommandName>bookx</ToolCommandName>
        <PackAsTool>true</PackAsTool>
        <Version>2.1.0</Version>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Kimi-Arthur/KifaNet</PackageProjectUrl>
        <PackageIcon>Kifa.png</PackageIcon>
        <Description>Utility to manage books.</Description>
        <Copyright>Copyright Â© 2015-2022 Kimi-Arthur</Copyright>
        <PackageTags>Kifa BookUtil bookx</PackageTags>
        <Authors>Kimi-Arthur</Authors>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PDFSharp.Standard" Version="1.51.15"/>
        <PackageReference Include="PdfSharpCore" Version="1.3.63"/>
        <PackageReference Include="QuickEPUB" Version="1.0.1"/>
        <PackageReference Include="SixLabors.ImageSharp" Version="3.1.10" />
    </ItemGroup>
    <ItemGroup>
        <None Include="..\..\resources\Kifa.png" Pack="true" PackagePath=""/>
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\Kifa.Books.ZeroAvenue\Kifa.Books.ZeroAvenue.csproj" />
        <ProjectReference Include="..\..\Kifa.Jobs\Kifa.Jobs.csproj"/>
        <ProjectReference Include="..\Kifa\Kifa.csproj"/>
        <ProjectReference Include="..\Kifa.Api.Files\Kifa.Api.Files.csproj"/>
        <ProjectReference Include="..\Kifa.Bilibili\Kifa.Bilibili.csproj"/>
        <ProjectReference Include="..\Kifa.IO\Kifa.IO.csproj"/>
        <ProjectReference Include="..\Kifa.Tools\Kifa.Tools.csproj"/>
    </ItemGroup>
</Project>
