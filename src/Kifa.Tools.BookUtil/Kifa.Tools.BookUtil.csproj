<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>bookx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>1.0.1</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/KifaNet</PackageProjectUrl>
    <PackageIcon>Pimix.png</PackageIcon>
    <Description>Utility to manage books.</Description>
    <Copyright>Copyright Â© 2015-2020 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps BookUtil app</PackageTags>
    <Authors>KimiArthur</Authors>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PDFSharp.Standard" Version="1.51.12" />
    <PackageReference Include="QuickEPUB" Version="1.0.1" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.7.1" />
    <PackageReference Include="NLog.Schema" Version="4.6.7" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\resources\NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\resources\Pimix.png" Pack="true" PackagePath="" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Kifa.Bilibili\Kifa.Bilibili.csproj" />
    <ProjectReference Include="..\Kifa.Tools\Kifa.Tools.csproj" />
  </ItemGroup>
</Project>
