<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>filex</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>10.1.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/Pimix</PackageProjectUrl>
    <PackageIcon>Pimix.png</PackageIcon>
    <Description>Utility to manage files.</Description>
    <Copyright>Copyright © 2015-2018 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps FileUtil app</PackageTags>
    <Authors>KimiArthur</Authors>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
    <PackageReference Include="NLog.Schema" Version="4.6.7" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Pimix.Api.Files\Pimix.Api.Files.csproj" />
    <ProjectReference Include="..\Pimix.Apps\Pimix.Apps.csproj" />
    <ProjectReference Include="..\Pimix.Configs\Pimix.Configs.csproj" />
    <ProjectReference Include="..\Pimix.Games.Files\Pimix.Games.Files.csproj" />
    <ProjectReference Include="..\Pimix.Infos\Pimix.Infos.csproj" />
    <ProjectReference Include="..\Pimix.IO\Pimix.IO.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\Pimix.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
