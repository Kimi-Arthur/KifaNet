<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ToolCommandName>memx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>2.1.5</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/KifaNet</PackageProjectUrl>
    <PackageIcon>Kifa.png</PackageIcon>
    <Description>Utility to import Memrise words.</Description>
    <Copyright>Copyright Â© 2021 Kimi Arthur</Copyright>
    <PackageTags>Kifa Apps MemriseUtil app</PackageTags>
    <Authors>KimiArthur</Authors>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kifa.Languages\Kifa.Languages.csproj"/>
    <ProjectReference Include="..\Kifa.Memrise\Kifa.Memrise.csproj"/>
    <ProjectReference Include="..\Kifa.Tools.DataUtil\Kifa.Tools.DataUtil.csproj"/>
    <ProjectReference Include="..\Kifa.Tools\Kifa.Tools.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NLog.Schema" Version="4.6.7"/>
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\resources\NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\resources\Kifa.png" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
