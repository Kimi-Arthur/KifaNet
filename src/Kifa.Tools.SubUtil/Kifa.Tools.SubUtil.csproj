<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>subx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>6.0.6</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/KifaNet</PackageProjectUrl>
    <PackageIcon>Kifa.png</PackageIcon>
    <Description>Utility to update subtitles.</Description>
    <Copyright>Copyright © 2015-2018 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps SubUtil app</PackageTags>
    <Authors>Kimi Arthur</Authors>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Kifa.Api.Files\Kifa.Api.Files.csproj"/>
    <ProjectReference Include="..\Kifa.Bilibili\Kifa.Bilibili.csproj"/>
    <ProjectReference Include="..\Kifa.Configs\Kifa.Configs.csproj"/>
    <ProjectReference Include="..\Kifa.Infos\Kifa.Infos.csproj"/>
    <ProjectReference Include="..\Kifa.Service\Kifa.Service.csproj"/>
    <ProjectReference Include="..\Kifa.Tools\Kifa.Tools.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1"/>
    <PackageReference Include="FFMpegCore" Version="4.8.0"/>
    <PackageReference Include="NLog.Schema" Version="4.6.7"/>
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\resources\NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\resources\Kifa.png" Pack="true" PackagePath=""/>
  </ItemGroup>
</Project>
