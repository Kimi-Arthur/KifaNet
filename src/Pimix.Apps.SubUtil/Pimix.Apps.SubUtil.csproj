<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>subx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>4.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/Pimix</PackageProjectUrl>
    <PackageIcon>Pimix.png</PackageIcon>
    <Description>Utility to update subtitles.</Description>
    <Copyright>Copyright © 2015-2018 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps SubUtil app</PackageTags>
    <Authors>Kimi Arthur</Authors>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Pimix.Api.Files\Pimix.Api.Files.csproj" />
    <ProjectReference Include="..\Pimix.Apps\Pimix.Apps.csproj" />
    <ProjectReference Include="..\Pimix.Bilibili\Pimix.Bilibili.csproj" />
    <ProjectReference Include="..\Pimix.Configs\Pimix.Configs.csproj" />
    <ProjectReference Include="..\Pimix.Infos\Pimix.Infos.csproj" />
    <ProjectReference Include="..\Pimix.Service\Pimix.Service.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
    <PackageReference Include="NLog.Schema" Version="4.6.7" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\resources\NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\resources\Pimix.png" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
