<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>bookx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/Pimix</PackageProjectUrl>
    <PackageIcon>Pimix.png</PackageIcon>
    <Description>Utility to manage books.</Description>
    <Copyright>Copyright Â© 2015-2020 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps BookUtil app</PackageTags>
    <Authors>KimiArthur</Authors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pimix.Apps\Pimix.Apps.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PDFSharp.Standard" Version="1.51.12"/>
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.7.1"/>
    <PackageReference Include="NLog.Schema" Version="4.6.7" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\Pimix.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
