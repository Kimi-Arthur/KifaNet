<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ToolCommandName>skyx</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>1.0.1</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/KifaNet</PackageProjectUrl>
    <PackageIcon>Kifa.png</PackageIcon>
    <Description>Utility to manage get Sky download link.</Description>
    <Copyright>Copyright Â© 2022 Kimi Arthur</Copyright>
    <PackageTags>Kifa</PackageTags>
    <Authors>KimiArthur</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kifa.SkyCh\Kifa.SkyCh.csproj" />
    <ProjectReference Include="..\Kifa.Tools\Kifa.Tools.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\resources\NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>NLog.config</Link>
    </None>
    <None Include="..\..\resources\Kifa.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
