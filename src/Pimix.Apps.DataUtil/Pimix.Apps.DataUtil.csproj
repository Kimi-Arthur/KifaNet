<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <ToolCommandName>datax</ToolCommandName>
    <PackAsTool>true</PackAsTool>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Kimi-Arthur/Pimix</PackageProjectUrl>
    <PackageIcon>Pimix.png</PackageIcon>
    <Description>Utility to manage data.</Description>
    <Copyright>Copyright Â© 2015-2020 Kimi Arthur</Copyright>
    <PackageTags>Pimix Apps DataUtil app</PackageTags>
    <Authors>KimiArthur</Authors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pimix.Apps\Pimix.Apps.csproj" />
    <ProjectReference Include="..\Pimix.Infos\Pimix.Infos.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NLog.Schema" Version="4.6.7" />
  </ItemGroup>
  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\..\Pimix.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
